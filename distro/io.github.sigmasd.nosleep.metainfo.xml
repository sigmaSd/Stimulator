<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.sigmasd.nosleep</id>
  <name>Stimulator</name>
  <summary>
    Stop the desktop environment from sleeping
  </summary>
  <developer_name>Bedis Nbiba</developer_name>

  <metadata_license>CC0</metadata_license>
  <project_license>MIT</project_license>

  <description>
    <p>
      This is a simple app that prevents the desktop environment (DE) from sleeping while its on.
      It should work regardless of the used DE thanks to the Inhibit portal.
    </p>
  </description>

  <launchable type="desktop-id">io.github.sigmasd.nosleep.desktop</launchable>

